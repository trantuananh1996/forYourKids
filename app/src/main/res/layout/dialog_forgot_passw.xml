<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_dialog_forgot_passw"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_forgot_password_logo"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_forgot_password_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_forgot_password_logo"
        android:text="@string/login_forgot_password_description_dialog" />

    <RelativeLayout
        android:id="@+id/rl_input_content_forgot_password"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/tv_forgot_password_description"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edit_forgot_password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_forgot_password_send"
            android:background="@drawable/bg_edittext_underline"
            android:inputType="textEmailAddress"
            android:paddingLeft="4dp"
            />

        <Button
            android:id="@+id/btn_forgot_password_send"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_button"
            android:text="Gá»­i"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <View
        android:id="@+id/view_gone"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/rl_input_content_forgot_password"
        android:visibility="invisible" />
</RelativeLayout>