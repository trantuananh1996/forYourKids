<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_forgot_passw"
    android:clickable="true"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_forgot_password_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_forgot_password_logo"
            android:layout_toRightOf="@+id/iv_forgot_password_logo"
            android:paddingTop="5dp"
            android:text="Phụ huynh có muốn .....?\n\n\n\n\n\n\n\n h"
            android:textSize="15sp" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btn_yes"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_yes"
        android:layout_toStartOf="@+id/btn_yes"
        android:background="@drawable/bg_button"
        android:text="@string/button_no"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/relativeLayout6"
        android:layout_alignRight="@+id/relativeLayout6"
        android:layout_below="@+id/ll_version_info"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_button"
        android:text="@string/button_yes"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/ll_version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_version_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp" />
    </LinearLayout>
</RelativeLayout>