<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frame_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_avatar" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:alpha="0.8"
            android:src="@mipmap/ic_launcher"
            android:visibility="visible" />

    </FrameLayout>


    <ImageView
        android:id="@+id/iv_app"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/rl_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/frame_avatar"
        android:layout_toRightOf="@+id/frame_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_toStartOf="@+id/tv_time"
            android:text="ihdnfjlkdknvjdnffdkfndkjfnkdjnfkjdnkjndkjfndkjngkjdbkjdjnjnjndjnjfdfdfdfdfdfdfdfdfÄ‘fdfdfdfdfdfdfdkjvnsdfkjvbjkdnfkjdsbnjjdjj"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:gravity="bottom"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:text="5:30"
            android:textColor="#757575"
            android:textSize="12sp" />


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="jhgjjh"
            android:textColor="#757575"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>